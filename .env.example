# Example environment variables for local development and training.
# Copy to `.env` and adjust paths as needed.

# AI_WAREHOUSE 3.0 roots
EDGE_DEID_CACHE_HOME=/mnt/c/ai_cache
EDGE_DEID_MODELS_HOME=/mnt/c/ai_models
EDGE_DEID_DATA_HOME=/mnt/data

# Optional: Hugging Face / Torch cache dirs (recommended)
HF_HOME=/mnt/c/ai_cache/huggingface
TRANSFORMERS_CACHE=/mnt/c/ai_cache/huggingface
TORCH_HOME=/mnt/c/ai_cache/torch
XDG_CACHE_HOME=/mnt/c/ai_cache
PIP_CACHE_DIR=/mnt/c/ai_cache/pip

# Offline defaults (enable for runtime / CI; disable for dataset/model downloads)
HF_HUB_OFFLINE=1
TRANSFORMERS_OFFLINE=1

# Pipeline toggles
USE_STUB=true
USE_ONNX=false
USE_SPACY=false
OCR_ENABLED=false
USE_GPU=false

# ONNX Runtime providers (comma-separated order)
# Example for GPU: CUDAExecutionProvider,CPUExecutionProvider
ONNX_PROVIDERS=CPUExecutionProvider

# Replacement locale
FAKER_LOCALE=zh_TW
