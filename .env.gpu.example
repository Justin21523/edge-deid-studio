# Example environment variables for GPU-focused local development.
# Copy to `.env` and adjust paths as needed.

# AI_WAREHOUSE 3.0 roots
EDGE_DEID_CACHE_HOME=/mnt/c/ai_cache
EDGE_DEID_MODELS_HOME=/mnt/c/ai_models
EDGE_DEID_DATA_HOME=/mnt/data

# Cache dirs (recommended)
HF_HOME=/mnt/c/ai_cache/huggingface
TRANSFORMERS_CACHE=/mnt/c/ai_cache/huggingface
TORCH_HOME=/mnt/c/ai_cache/torch
XDG_CACHE_HOME=/mnt/c/ai_cache
PIP_CACHE_DIR=/mnt/c/ai_cache/pip

# Runtime defaults
HF_HUB_OFFLINE=1
TRANSFORMERS_OFFLINE=1

# Enable real detectors and GPU execution
USE_STUB=false
USE_ONNX=true
USE_GPU=true
ONNX_PROVIDERS=CUDAExecutionProvider,CPUExecutionProvider

# OCR (optional)
OCR_ENABLED=false
OCR_ENGINE=auto

# Replacement locale
FAKER_LOCALE=zh_TW
