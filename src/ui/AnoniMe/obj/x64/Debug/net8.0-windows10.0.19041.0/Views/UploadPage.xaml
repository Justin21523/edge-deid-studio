<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="AnoniMe.UploadPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnoniMe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AnoniMe.ViewModels"
                                   
    mc:Ignorable="d">

    <Grid>
        <!-- 下面是你的 Grid / UI 區塊 -->
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- 左側：拖曳上傳區與選擇按鈕 -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="12">
                <Grid x:ConnectionId='10' Height="500" AllowDrop="True"
                                                  
                                          >

                    <Rectangle Stroke="Black"
                               StrokeDashArray="4,2"
                               RadiusX="10" RadiusY="10"
                               StrokeThickness="2"
                               Fill="#FFFFFF"/>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                        <FontIcon Glyph="&#xE896;" FontSize="50" Foreground="Gray"/>
                        <TextBlock Text="請拖曳檔案至此"
                                   HorizontalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="16"/>
                    </StackPanel>
                </Grid>


                <Button x:ConnectionId='11' Content="Choose File"
                                                                     
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,0"
                        Background="#66CC33"
                        Foreground="White"
                        Padding="12,6"
                        CornerRadius="6"/>
            </StackPanel>

            <!-- 右側面板 -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0" Spacing="10">
                <!-- 狀態欄 -->
                <Grid Height="40">
                    <StackPanel x:ConnectionId='7'                                                  Spacing="4">
                        <TextBlock x:ConnectionId='8'                                            
                                   FontWeight="SemiBold"
                                   Foreground="#FFFFFF"
                                   FontSize="14"/>
                        <ProgressBar x:ConnectionId='9'                                                 
                                     Height="8"
                                     Minimum="0" Maximum="100"/>
                    </StackPanel>
                </Grid>

                <!-- 標籤區 -->
                <ItemsControl x:ConnectionId='2' Height="120"                                                       >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F0F0F0" CornerRadius="10"
                                    Margin="4" Padding="8,4"
                                    MinWidth="100" MaxWidth="240"
                                    HorizontalAlignment="Left">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding}" FontSize="12" Foreground="Gray"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="180" />

                                    <Button Grid.Column="1"
                                            Content="✕"
                                            Width="20" Height="20" Padding="0"
                                            FontSize="12" Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="Gray"
                                            Command="{Binding DataContext.RemoveTagCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 選項區 -->
                <Border Background="#F8F8F8" Padding="10" CornerRadius="6" Height="350">
                    <StackPanel>
                        <TextBlock Text="遮蔽選項" FontSize="20" FontWeight="Bold" Foreground="Black" Margin="0 0 0 6"/>
                        <CheckBox x:ConnectionId='4' Content="遮蔽身份資訊" Foreground="Black"
                                                                                           />
                        <CheckBox x:ConnectionId='5' Content="遮蔽地址資訊" Foreground="Black"
                                                                                          />
                    </StackPanel>
                </Border>

                <!-- 生成按鈕 -->
                <Button x:ConnectionId='3' Content="生成結果"
                                                                          
                                                                               
                        ToolTipService.ToolTip="請先選擇檔案與選項"
                        HorizontalAlignment="Center"
                        Background="#66CC33"
                        Foreground="White"
                        Padding="10,6"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>

      
    </Grid>
</Page>

