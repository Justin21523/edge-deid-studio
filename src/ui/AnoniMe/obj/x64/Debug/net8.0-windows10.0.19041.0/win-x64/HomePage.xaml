<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AnoniMe.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnoniMe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上半：主標題與打字動畫 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Spacing="20">
            <!-- 左側三行 -->
            <StackPanel VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="ENCRYPT" FontSize="128" FontWeight="Bold" Foreground="#EDA36D"/>
                <TextBlock Text="YOUR" FontSize="110" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="LIFE" FontSize="100
                           " FontWeight="Bold" Foreground="#7AC88C"/>
            </StackPanel>

            <!-- 右側打字動畫 -->
            <StackPanel Orientation="Horizontal" Margin="4,20,0,0">
                <TextBlock x:ConnectionId='3' x:Name="TypingTextBlock"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Text=""
                           VerticalAlignment="Bottom"/>
                <TextBlock x:ConnectionId='4' x:Name="DotsBlock"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Text=""
                           VerticalAlignment="Bottom"
                           Margin="2,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- 下半：上傳按鈕 -->
        <Button x:ConnectionId='2' Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Padding="16,8"
                Margin="0,0,0,40"
                Background="#7A9B8E"
                Foreground="White"
                FontSize="16"
                CornerRadius="8"
                                          >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8A5;" FontSize="18" Margin="0,0,8,0"/>
                <TextBlock Text="請選擇要上傳的檔案"/>
            </StackPanel>
        </Button>
    </Grid>

</Page>

